<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mlrit.atm.MainActivity">

    <EditText
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="PIN"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="SUBMIT"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/pin"
        android:layout_alignStart="@+id/pin" />

    <EditText
        android:id="@+id/enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ENTER AMOUNT"
        android:inputType="numberDecimal"
        android:layout_below="@+id/submit"
        android:layout_alignEnd="@+id/submit"
        android:layout_marginTop="29dp" />

    <Button
        android:id="@+id/deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/withdrawl"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="DEPOSIT" />

    <Button
        android:id="@+id/withdrawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITHDRAWL"

        android:layout_marginTop="62dp"
        android:layout_below="@+id/enter_amount"
        android:layout_alignEnd="@+id/pin" />

    <Button
        android:id="@+id/bal_enquiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALANCE ENQUIRY"
        android:layout_alignBaseline="@+id/exit"
        android:layout_alignBottom="@+id/exit"
        android:layout_alignEnd="@+id/withdrawl" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/deposit"
        android:layout_alignStart="@+id/deposit" />

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:hint="TextView"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/bal_enquiry" />



</RelativeLayout>
